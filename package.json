{
  "name": "dev-diaries-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "dev": "NODE_ENV=development npm run watch ./src/bin/www",
    "prod": "npm run build && NODE_ENV=production node ./dist/bin/www",
    "build": "npm run clean && babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "test": "jest dotenv/config",
    "watch": "nodemon --config ./nodemon.json --"
  },
  "dependencies": {
    "@babel/standalone": "^7.5.4",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "lodash": "^4.17.14",
    "mongoose": "^5.6.4",
    "morgan": "~1.9.1",
    "atob": "^2.1.2",
    "axios": "^0.18.0",
    "builtin-modules": "3.0.0",
    "express-session": "^1.16.2",
    "joi": "^13.6.0",
    "loadtest": "^3.0.7",
    "npm": "^6.9.0",
    "qs": "^6.7.0",
    "randomstring": "^1.1.5",
    "recommender": "^3.0.0",
    "testserver": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "eslint": "^6.0.1",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^24.0.0",
    "jest-stare": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty && npm run lint && npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "reporters": [
      "default",
      "jest-stare"
    ]
  },
  "jest-stare": {
    "resultDir": "coverage/testResults",
    "coverageLink": "../index.html"
  }
}
